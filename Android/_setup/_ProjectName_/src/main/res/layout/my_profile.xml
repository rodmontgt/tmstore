<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:layoutManager="LinearLayoutManager" />

        <View
            android:id="@+id/btn_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rv_my_profile"
            android:background="@color/separator"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_separator"
            android:gravity="end"
            android:paddingBottom="18dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="@string/title_reset_password"
            android:textAlignment="textEnd"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/highlight_text_color_2"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>