<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_theme"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="186dp"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:id="@+id/name_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/color_bg_theme"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <com.utils.customviews.CustomFontTextView
                android:id="@+id/text_categoryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textColor="@color/normal_text_color"
                app:fontName="FONT_MED"
                tools:text="text_categoryname" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
