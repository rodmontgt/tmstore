<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vendor_profile_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vendor_profile_bg"
    android:gravity="center_vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image_vendor_icon"
        android:layout_toRightOf="@+id/image_vendor_icon"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_vendor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="vendor_name"
            android:textColor="@color/normal_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_vendor_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="vendor_location"
            android:textColor="@color/normal_text_color_lite"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_vendor_icon"
        android:layout_width="@dimen/vendor_icon_width"
        android:layout_height="@dimen/vendor_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@drawable/vendor_profile_icon_bg"
        android:src="@drawable/app_icon" />
</RelativeLayout>