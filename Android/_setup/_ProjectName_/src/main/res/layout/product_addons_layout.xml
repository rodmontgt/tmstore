<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_addons_expand_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/card_header_bg"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/expand_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_vc_down" />

        <TextView
            android:id="@+id/title_product_addons_expand"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/expand_img"
            android:layout_toStartOf="@+id/expand_img"
            android:background="@color/card_header_bg"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/normal_text_color"
            tools:text="@string/title_product_addons_measurements" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/product_addons_option_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp">

        <ImageView
            android:id="@+id/option_measurements_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/clear"
            android:minHeight="120dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_icon" />

        <LinearLayout
            android:id="@+id/option_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>
