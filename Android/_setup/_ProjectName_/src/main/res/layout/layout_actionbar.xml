<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/actionImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/icon_action_bar_size"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/app_icon"
        android:visibility="visible" />

    <com.utils.customviews.CustomFontTextView xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
        android:id="@+id/actionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        customAttrs:fontName="FONT_MED"
        tools:text="Title" />

    <android.support.v7.widget.SearchView
        android:id="@+id/ab_search_view"
        android:visibility="gone"
        android:layout_marginStart="-13dp"
        android:layout_marginLeft="-13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>