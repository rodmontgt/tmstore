<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/tiny_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_product" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:maxLines="1"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/normal_text_color"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/quantity_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="0dp"
            android:gravity="center|center_horizontal">

            <ImageButton
                android:id="@+id/btn_qty_minus"
                android:layout_width="32dp"
                android:layout_height="32dp"

                android:background="@color/clear"
                android:gravity="center|center_vertical"
                android:padding="0dp"
                app:srcCompat="@drawable/ic_vc_minus_round"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/edit_quantity"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_text_bg"
                android:ems="2"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="0dp"
                android:paddingTop="4dp"
                android:text="1"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/btn_qty_plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@color/clear"
                android:gravity="center|center_vertical"
                app:srcCompat="@drawable/ic_vc_plus_round"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|start"
            android:maxLines="1"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/highlight_text_color"
            android:visibility="gone"
            android:textSize="10sp" />

