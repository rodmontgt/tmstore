<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/clear"
    android:padding="5dp">

    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_vc_wish_flat" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_icon"
        android:layout_alignRight="@+id/main_icon"
        android:layout_alignTop="@+id/main_icon"
        android:gravity="end|top">

        <ImageView
            android:id="@+id/icon_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/img_icon_badge" />

        <TextView
            android:id="@+id/text_badge_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="99"
            android:textColor="@color/color_theme"
            android:textSize="9sp" />
    </RelativeLayout>

</RelativeLayout>